<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/game">

    <Button
        android:text="@string/startgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="102dp"
        android:id="@+id/startgame"
        android:onClick="onStart" />

    <TextView
        android:text="@string/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:id="@+id/input_messaeg"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/input2"
        android:ems="10"
        android:layout_alignTop="@+id/user1_image"
        android:layout_alignRight="@+id/input_messaeg"
        android:layout_alignEnd="@+id/input_messaeg"
        android:id="@+id/user_inputone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignBottom="@+id/user2_image"
        android:layout_alignRight="@+id/user_inputone"
        android:layout_alignEnd="@+id/user_inputone"
        android:id="@+id/user_inputtwo"
        android:text="@string/input1" />

    <TextView
        android:text="@string/user1picture1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user1_icon"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_above="@+id/green_connect"
        android:layout_alignRight="@+id/user2_image"
        android:layout_alignEnd="@+id/user2_image" />

    <TextView
        android:text="@string/user2picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user2_icon"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_above="@+id/green_connect"
        android:layout_alignLeft="@+id/white_connect"
        android:layout_alignStart="@+id/white_connect"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp" />

    <TextView
        android:text="@string/user2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/user2_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/user_inputone"
        android:layout_alignLeft="@+id/user1_image"
        android:layout_alignStart="@+id/user1_image" />

    <TextView
        android:text="@string/user1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="178dp"
        android:id="@+id/user1_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/input_messaeg"
        android:layout_toLeftOf="@+id/user_inputone"
        android:layout_toStartOf="@+id/user_inputone"
        android:layout_centerVertical="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/spartan_white"
        android:id="@+id/white_connect"
        tools:ignore="ContentDescription"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/spartan_green"
        android:id="@+id/green_connect"
        android:contentDescription=""
        tools:ignore="ContentDescription"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
